FROM maven:3.9-eclipse-temurin-17 AS build
WORKDIR /app
COPY pom.xml ./
COPY hint-manager/pom.xml ./hint-manager/pom.xml
COPY hint-manager/src ./hint-manager/src
WORKDIR /app/hint-manager
RUN mvn clean package -DskipTests

FROM eclipse-temurin:17-jre
WORKDIR /app
COPY --from=build /app/hint-manager/target/*.jar app.jar
ENTRYPOINT ["java", "-jar", "app.jar"]
