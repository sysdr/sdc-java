{
  "dashboard": {
    "title": "Kafka Consumer Metrics - Day 40",
    "panels": [
      {
        "title": "Consumer Processing Rate",
        "targets": [
          {
            "expr": "rate(log_consumer_success_total[1m])"
          }
        ],
        "type": "graph"
      },
      {
        "title": "Consumer Lag",
        "targets": [
          {
            "expr": "kafka_consumer_fetch_manager_records_lag_max"
          }
        ],
        "type": "graph"
      },
      {
        "title": "Processing Latency (p99)",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(log_consumer_processing_time_bucket[5m]))"
          }
        ],
        "type": "graph"
      },
      {
        "title": "DLQ Message Rate",
        "targets": [
          {
            "expr": "rate(log_dlq_messages_total[1m])"
          }
        ],
        "type": "graph"
      }
    ]
  }
}
