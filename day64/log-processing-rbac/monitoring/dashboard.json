{
  "dashboard": {
    "title": "RBAC System Metrics Dashboard",
    "tags": ["rbac", "microservices"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Authentication Requests Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{uri=\"/auth/login\"}[5m])",
            "legendFormat": "Login Requests/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Authorization Failures (403)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{status=\"403\"}[5m])",
            "legendFormat": "403 Errors/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Errors/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Total HTTP Requests",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count[5m])) by (instance)",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "HTTP Response Status Codes",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{status=\"200\"}[5m])) by (instance)",
            "legendFormat": "200 OK - {{instance}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_server_requests_seconds_count{status=\"401\"}[5m])) by (instance)",
            "legendFormat": "401 Unauthorized - {{instance}}",
            "refId": "B"
          },
          {
            "expr": "sum(rate(http_server_requests_seconds_count{status=\"403\"}[5m])) by (instance)",
            "legendFormat": "403 Forbidden - {{instance}}",
            "refId": "C"
          },
          {
            "expr": "sum(rate(http_server_requests_seconds_count{status=\"500\"}[5m])) by (instance)",
            "legendFormat": "500 Error - {{instance}}",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Request Latency (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[5m])) by (le, instance))",
            "legendFormat": "p95 - {{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency (seconds)"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Circuit Breaker State",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "resilience4j_circuitbreaker_state",
            "legendFormat": "{{name}} - {{state}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "State"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "JVM Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{area=\"heap\"}",
            "legendFormat": "Heap Used - {{instance}}",
            "refId": "A"
          },
          {
            "expr": "jvm_memory_max_bytes{area=\"heap\"}",
            "legendFormat": "Heap Max - {{instance}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Active Users (Total Logins)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "sum(increase(http_server_requests_seconds_count{uri=\"/auth/login\"}[1h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        }
      },
      {
        "id": 9,
        "title": "Log Queries Executed",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 24},
        "targets": [
          {
            "expr": "sum(increase(http_server_requests_seconds_count{uri=\"/api/logs/query\"}[1h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        }
      }
    ]
  }
}
