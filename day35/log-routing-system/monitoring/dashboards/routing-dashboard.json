{
  "dashboard": {
    "title": "Log Routing System Dashboard",
    "panels": [
      {
        "title": "Logs Received Rate",
        "targets": [
          {
            "expr": "rate(logs_received_total[1m])"
          }
        ]
      },
      {
        "title": "Logs Routed by Topic",
        "targets": [
          {
            "expr": "rate(logs_routed_total[1m])"
          }
        ]
      },
      {
        "title": "Routing Latency",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(routing_latency_seconds_bucket[5m]))"
          }
        ]
      }
    ]
  }
}
