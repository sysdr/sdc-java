{
  "dashboard": {
    "id": null,
    "title": "Log Processing System",
    "tags": ["distributed-systems", "kafka", "spring-boot"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Log Events Received",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(log_events_received_total[5m])",
            "legendFormat": "Events/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Log Events Processed",
        "type": "stat", 
        "targets": [
          {
            "expr": "rate(log_events_processed_total[5m])",
            "legendFormat": "Processed/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "5s"
  }
}
